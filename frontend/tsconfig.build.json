{
  "extends": "./tsconfig.json",
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/tests/**/*",
    "src/**/__tests__/**/*",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "node_modules",
    "build",
    "dist"
  ],
  "compilerOptions": {
    "noEmit": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  }
}