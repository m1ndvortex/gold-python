{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "outDir": "./build"
  },
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/tests/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*"
  ]
}