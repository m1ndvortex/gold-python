    "@tanstack/react-query": "^4.20.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/axios": "^0.9.36",
    "@types/moment-jalaali": "^0.7.9",
    "@types/react-dnd": "^3.0.2",
    "@types/react-dnd-html5-backend": "^3.0.2",
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.294.0",
    "moment": "^2.30.1",
    "moment-jalaali": "^0.10.4",
    "msw": "^2.10.5",
    "persian-date": "^1.1.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-day-picker": "^9.9.0",
    "react-dnd": "^14.0.5",
    "react-dnd-html5-backend": "^14.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-modern-calendar-datepicker": "^3.1.6",
    "react-router-dom": "^6.6.1",
    "react-scripts": "5.0.1",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.2.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^4.9.4",
    "web-vitals": "^2.1.4",
    "zod": "^3.23.8"
  },
  "scripts": {
    "start": "craco start",
    "build": "npm run validate:translations && cross-env NODE_ENV=production craco build",
    "build:no-validation": "cross-env NODE_ENV=production craco build",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "test:docker": "cross-env REACT_APP_API_URL=http://localhost:8000 react-scripts test --watchAll=false --testTimeout=120000",
    "test:docker:auth": "cross-env REACT_APP_API_URL=http://localhost:8000 react-scripts test --watchAll=false --testTimeout=120000 --testPathPattern=auth.test.tsx",
    "test:docker:auth-simple": "cross-env REACT_APP_API_URL=http://localhost:8000 react-scripts test --watchAll=false --testTimeout=120000 --testPathPattern=auth-simple",
    "test:docker:auth-node": "cross-env REACT_APP_API_URL=http://localhost:8000 react-scripts test --watchAll=false --testTimeout=120000 --testPathPattern=auth-docker-node",
    "test:docker:integration": "cross-env REACT_APP_API_URL=http://localhost:8000 react-scripts test --watchAll=false --testTimeout=120000 --testPathPattern=docker-auth-integration",
    "test:docker:jest": "cross-env REACT_APP_API_URL=http://localhost:8000 react-scripts test --watchAll=false --testTimeout=120000 --testPathPattern=docker-auth-jest",
    "test:docker:inventory": "cross-env NODE_ENV=test REACT_APP_API_URL=http://backend:8000 react-scripts test --watchAll=false --testTimeout=120000 --testPathPattern=inventory-docker",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --ignore-pattern 'src/tests/**' --ignore-pattern '**/*.test.*' --ignore-pattern '**/*.spec.*'",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix --ignore-pattern 'src/tests/**' --ignore-pattern '**/*.test.*' --ignore-pattern '**/*.spec.*'",
    "type-check": "tsc --project tsconfig.build.json --noEmit",
    "validate:translations": "node scripts/build-validate-translations.js",
    "validate:translations:report": "cross-env GENERATE_TRANSLATION_REPORT=true node scripts/build-validate-translations.js",
    "validate:translations:strict": "cross-env FAIL_ON_TRANSLATION_ERRORS=true node scripts/build-validate-translations.js",
    "translation:report": "ts-node src/scripts/generateTranslationReport.ts",
    "translation:audit": "ts-node src/scripts/validateTranslations.ts",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(axios|zod|@hookform|jspdf|date-fns|framer-motion|react-dnd|react-dnd-html5-backend|dnd-core|@react-dnd)/)"
    ]
  },
  "overrides": {
    "nth-check": ">=2.0.1",
    "webpack-dev-server": ">=4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/testing-library__jest-dom": "^5.14.5",
    "autoprefixer": "^10.4.16",
    "craco": "^0.0.3",
    "cross-env": "^10.0.0",
    "glob": "^10.4.5",
    "ignore-loader": "^0.1.2",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.31",
    "tailwindcss-rtl": "^0.9.0"
  },
  "proxy": "http://backend:8000"
}
